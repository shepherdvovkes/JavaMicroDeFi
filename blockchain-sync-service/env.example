# Ethereum RPC Configuration
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# Alternative RPC providers:
# ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
# ETH_RPC_URL=https://rpc.ankr.com/eth
# ETH_RPC_URL=https://ethereum.publicnode.com

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
# For multiple brokers: KAFKA_BROKERS=broker1:9092,broker2:9092,broker3:9092

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
# For authentication: MONGODB_URI=mongodb://username:password@localhost:27017/ethereum_chaindata
# For replica set: MONGODB_URI=mongodb://localhost:27017,localhost:27018,localhost:27019/ethereum_chaindata?replicaSet=rs0

# Service Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# Sync Configuration
DEFAULT_START_BLOCK=0
DEFAULT_BLOCK_DELAY_MS=100
DEFAULT_BATCH_SIZE=100
MAX_RETRIES=5
RETRY_DELAY_MS=1000

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
STATUS_REPORT_INTERVAL_MS=300000

# Data Processing Configuration
ENABLE_TOKEN_TRANSFER_DETECTION=true
ENABLE_DEFI_EVENT_DETECTION=true
ENABLE_SMART_CONTRACT_ANALYSIS=true
ENABLE_BALANCE_TRACKING=false

# Known Contract Addresses (comma-separated)
KNOWN_TOKEN_CONTRACTS=0xA0b86a33E6441b8c4C8C0E4A0b86a33E6441b8c4C,0xB1c97a44E6442b9d5C8C0E4A0b86a33E6441b8c4D
KNOWN_DEFI_CONTRACTS=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D,0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8080
PROMETHEUS_ENDPOINT=/metrics

# Security Configuration
ENABLE_TLS=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem
