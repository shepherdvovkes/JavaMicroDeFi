# Infura Configuration
INFURA_PROJECT_ID=your_infura_api_key_here
INFURA_API_KEY=your_infura_api_key_here

# Ethereum RPC URLs
ETH_RPC_URL=https://mainnet.infura.io/v3/your_infura_api_key_here
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_api_key_here

# Alternative RPC providers (backup)
# ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
# ETH_RPC_URL=https://rpc.ankr.com/eth
# ETH_RPC_URL=https://ethereum.publicnode.com

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017

# Service Configuration
LOG_LEVEL=info

# Sync Configuration
DEFAULT_START_BLOCK=0
DEFAULT_BLOCK_DELAY_MS=100
DEFAULT_BATCH_SIZE=100
MAX_RETRIES=5
RETRY_DELAY_MS=1000

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
STATUS_REPORT_INTERVAL_MS=300000

# Data Processing Configuration
ENABLE_TOKEN_TRANSFER_DETECTION=true
ENABLE_DEFI_EVENT_DETECTION=true
ENABLE_SMART_CONTRACT_ANALYSIS=true
ENABLE_BALANCE_TRACKING=false

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8080
PROMETHEUS_ENDPOINT=/metrics

# Security Configuration
ENABLE_TLS=false
